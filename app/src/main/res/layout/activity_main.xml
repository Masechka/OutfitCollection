<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#080809">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#1B2413"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout"
        app:layout_constraintVertical_bias="1.0">

        <ImageButton
            android:id="@+id/home_btn"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:backgroundTint="#5F6556"
            android:scaleType="centerInside"
            android:src="@drawable/home"
            app:tint="#000000" />

        <ImageButton
            android:id="@+id/collection_btn"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="50dp"
            android:layout_weight="1"
            android:backgroundTint="#5F6556"
            android:scaleType="centerInside"
            android:src="@drawable/collection"
            app:tint="#000000" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/idea_text"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginHorizontal="42dp"
            android:layout_marginVertical="150dp"
            android:background="@drawable/text_bg_dg"
            android:gravity="center"
            android:text="@string/greeting"
            android:textAlignment="center"
            android:textColor="#433F3E"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/large_frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>